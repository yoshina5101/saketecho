<section class="hero">
  <div class="hero__text">
    <h1><%= t("app.name") %></h1>
    <p><%= t("app.tagline") %></p>

    <div class="hero__actions">
      <% if user_signed_in? %>
        <%= link_to t("pages.home.cta.record"), new_tasting_log_path, class: "btn-primary" %>
        <%= link_to t("pages.home.cta.browse"), beverages_path, class: "btn-secondary" %>
      <% else %>
        <%= link_to t("pages.home.cta.login_to_start"), new_user_session_path, class: "btn-primary" %>
      <% end %>
    </div>
  </div>

  <div class="hero__image">
    <%= image_tag "top_hero.jpg", alt: t("pages.home.hero_alt", default: "日本酒と酒器") %>
  </div>
</section>
